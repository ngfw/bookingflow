# BookingFlow - Production Environment Configuration
# Copy this file to .env on your production server and fill in the actual values

# Application
APP_NAME="BookingFlow"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=cache
APP_MAINTENANCE_STORE=redis

# Performance
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily,sentry
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_SLACK_WEBHOOK_URL=

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bookingflow_production
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

# Session (Use Redis in production for better performance)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=redis

# Filesystem (Use S3 or similar for production)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-salon-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# Queue (Use Redis for better performance)
QUEUE_CONNECTION=redis

# Cache (Use Redis in production)
CACHE_STORE=redis
CACHE_PREFIX=salon_

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io  # Or your SMTP provider
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Twilio SMS (for appointment reminders)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# Payment Gateway (if using Stripe)
STRIPE_KEY=your_stripe_publishable_key
STRIPE_SECRET=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.2

# Backup
BACKUP_DISK=s3
BACKUP_MAIL_TO=admin@yourdomain.com

# Security
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_WEB=1000

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true

# Monitoring
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME="${APP_NAME}"

# Pusher (for real-time notifications)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
